<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id ="error_explanation">
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </div>
  <% end %>
  
  <%= f.label :status, "ステータス" %>
  <%= f.select :status,[["勉強","勉強"],["仕事","仕事"],["私用","私用"],["その他","その他"]] %>

  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  
  <%= f.submit  '投稿' %>
<%  end %>